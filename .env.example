# PostgreSQL Database
# If using Docker with port mapping 5433:5432, use localhost:5433
# If using local PostgreSQL or Docker with 5432:5432, use localhost:5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agent_framework

# Test Database (separate database for tests)
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agent_framework_test

# LLM API Keys (optional - only needed if using LLM agents)

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
